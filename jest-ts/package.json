{
  "name": "jest-typescript",
  "version": "1.0.0",
  "description": "Bootstrap jest test framework with typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "author": "Andrey Kucherenko",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "jest": "^29.5.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.9.10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
